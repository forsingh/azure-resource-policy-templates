{
    "$schema": "http://schema.management.azure.com/schemas/2015-10-01-preview/policyDefinition.json",
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Storage/storageAccounts"
            },
            {
                "not": {
                    "field": "Microsoft.Storage/storageAccounts/enableBlobEncryption",
                    "equals": "true"
                }
            }
        ]
    },
    "then": {
     "effect": "deny"   
    }
}
